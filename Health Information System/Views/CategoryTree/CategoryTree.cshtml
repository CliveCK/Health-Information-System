@model Health_Information_System.Models.CategoryHeader
@{
    ViewBag.Title = "CategoryTree";
}

<h2>CategoryTree</h2>
@using (Html.BeginForm("SaveCategory", "CategoryTree"))
{
<div class="container col-sm-12">
    <div class="row">
        <div class="form-group col-sm-3">
            @Html.Label("Categories", null, htmlAttributes: new { @class = "control-label" })
            @Html.ListBox("CategoryHeaderID", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-offset-1 col-sm-8">
            <div class="row">
                <div class="form-group col-sm-4">
                    @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-sm-4">
                    @Html.LabelFor(m => m.Description2, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.Description2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Description2, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <input type="submit" value="Save" class="btn btn-default"  />
                </div>
            </div>
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="/Scripts/jquery-1.10.2.js"></script>
<script>
$(document).ready(function () {
    $('#CategoryHeaderID').change(function () {
        var url = '@Url.Action("Edit", "CategoryTree", new { id = "__id__" })';
        window.location.href = url.replace('__id__', $('#CategoryHeaderID').val());
    });
    });
</script>