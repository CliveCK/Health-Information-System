<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Health Information System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Health Information System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size:1.5em;font-family:'Lucida Sans Unicode', 'Lucida Grande', sans-serif" })
            </div>
        </div>
    </div>
    <div class="container body-content">
          @RenderBody()
        <br />
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - HIS - Vault ITS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
